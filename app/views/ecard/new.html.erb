<h1>Ecardator</h1>

<div>

<%= form_for @ecard, url: {action: "create"} do |f| %>
<div class="form-div">
  <div class="form-select">
    <div class="first-form-select_1">
      <%= f.label 'Brand' %>:
      <%= f.select :brand, ['miumiu', 'prada']%>
    </div>
    <div class="first-form-select_2">
      <%= f.label 'Language' %>:
      <%= f.select :lang, ['en', 'it', 'fr', 'de', 'jp', 'es', 'cn', 'ko']%>
    </div>
    <div class="first-form-select_3">
      <%= f.label 'Forward to a friend' %>:
      <%= f.select :forward_sel, ['No', 'Yes']%>
    </div>
  </div>

  <%= f.label :title %>:<br />
  <%= f.text_field :title %><br />

  <%= f.label :pre_header %>:<br />
  <%= f.text_field :pre_header %><br />

  <%= f.label :width %>:<br />
  <%= f.text_field :width %><br />

  <%= f.label :height %>:<br />
  <%= f.text_field :height %><br />
  
  <%= f.label :src %>:<br />
  <%= f.text_field :src %><br />
  
  <%= f.label :link %>:<br />
  <%= f.text_field :link %><br />

  <%= f.label :alt %>:<br />
  <%= f.text_field :alt %><br />

  <%= f.submit "Create Ecard" %>
 </div>
<% end %>
</div>